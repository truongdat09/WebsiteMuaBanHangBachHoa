<body>
    <div class="wrapper">
        <div class="main-header">
            <!-- Logo Header -->
            <div class="logo-header" data-background-color="white">

                <a href="index.html" class="logo">
                    <img src="~/assets/img/logo.png" width="150px" style="" height="100%" alt="navbar brand" class="navbar-brand">
                </a>
                <button class="navbar-toggler sidenav-toggler ml-auto" type="button" data-toggle="collapse" data-target="collapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon">
                        <i class="fa fa-duotone fa-bars"></i>
                    </span>
                </button>
                <button class="topbar-toggler more"><i class="icon-options-vertical"></i></button>
                <div class="nav-toggle">
                    <button class="btn btn-toggle toggle-sidebar">
                        <i class="fa fa-duotone fa-bars"></i>
                    </button>
                </div>
            </div>

            <!-- End Logo Header -->
            @{
                Html.RenderAction("RenderHeader", "Admin");
            }
        </div>

        <!-- End Navbar -->
    </div>


    <!-- Sidebar -->
    <div class="sidebar sidebar-style-2">
        <div class="sidebar-wrapper scrollbar scrollbar-inner">
            <div class="sidebar-content">
                <div class="user">
                    <div class="avatar-sm float-left mr-2">
                        <img src="~/assets/img/account.png" alt="..." class="avatar-img rounded-circle">
                    </div>
                    <div class="info">
                        <a data-toggle="collapse" href="#" aria-expanded="true">
                            <span>
                                Xin chào @u.NHOMQUYEN.TENQUYEN
                            </span>
                            <h5>@u.TENNV</h5>
                        </a>

                    </div>
                </div>
                <ul class="nav nav-primary">
                    <li class="nav-item active">
                        <a href="@Url.Action("Trang_chu", "Admin")" class="collapsed" aria-expanded="false">
                            <i class="fa fa-home"></i>
                            <p>Trang chủ</p>




                        </a>

                    </li>
                    <li class="nav-section">
                        <span class="sidebar-mini-icon">
                            <i class="fa fa-ellipsis-h"></i>
                        </span>
                        <h4 class="text-section">Danh mục quản lý</h4>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("SanPham", "Admin")" class="collapsed" aria-expanded="false">
                            <i class="fa fa-brands fa-product-hunt"></i>
                            <p>Sản Phẩm</p>

                        </a>

                    </li>

                    <li class="nav-item">
                        <a href="@Url.Action("Don_hang", "Admin")">
                            <i class="fa fa-cart-plus"></i>
                            <p>Đơn Hàng</p>
                        </a>

                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("Thong_ke", "Admin")" class="collapsed" aria-expanded="false">
                            <i class="fa fa-solid fa-users"></i>
                            <p>Thống Kê</p>

                        </a>

                    </li>

                    <li class="mx-4 mt-2">
                        
                        <a href="@Url.Action("DangXuat", "TaiKhoan")" class="btn btn-primary btn-block"><span class="btn-label mr-2"> <i class="fa fa-left"></i></span>Trang chính</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <!-- End Sidebar -->
    <div class="main-panel">
        <div class="content">
            <div>@RenderBody()</div>
        </div>
    </div>


